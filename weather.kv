ScreenManager:
    HomeScreen:
        id: home
        name: 'home'
<HomeScreen>:
    canvas:
        Color:
            rgb: (5/255, 2/255, 33/255)
        Rectangle:
            pos: 0,-130
            size: self.size
    FloatLayout:
        MDToolbar:
            pos_hint: {'top':1}
            title: 'Weather'
        #Search
        MDTextField:
            id: searched_city
            hint_text: 'Search City'
            pos_hint: {'top':.87}
            required: True
            helper_text: "Press enter to get the weather of the city"
            helper_text_mode: 'on_focus'
            multiline: False
            on_text_validate: root.search('on_release',40)
            
        #Labels
        Label:
            text:'Today'
            font_size: 30
            pos_hint: {'top':1.2,'center_x':.5}
        Label:
            text:str(root.Today)
            pos_hint: {'center_x':.5,'top': 1.155}
        Label:
            text:str(root.weather_text)
            pos_hint: {'top':1.1,'center_x':.40}
        Label:
            text:str(root.temp_c)
            font_size:100
            pos_hint: {'center_x':.5,'top':1}
        Label:
            text:str(root.city_name)+', '+str(root.country_name)
            pos_hint: {'center_x':.5,'top':.90}
        Label:
            text:'Feels like '+str(root.feels_like)+ ' . '+'Sunset '+ str(root.sunset)
            pos_hint: {'center_x':.5,'top':.80}
            #Wind
        Label:
            text:'Wind:'
            pos_hint: {'center_x':.2,'top':.70}
        Label:
            text:str(root.wind)+ ' mph'
            pos_hint: {'center_x':.2,'top':.65}
            #Humidity
        Label:
            text:'Humidity:'
            pos_hint: {'center_x':.5,'top':.70}
        Label:
            text:str(root.humidity)+'%'
            pos_hint: {'center_x':.5,'top':.65}
            #Pressure
        Label:
            text:'Pressure:'
            pos_hint: {'center_x':.8,'top':.70}
        Label:
            text:str(root.pressure)+' in'
            pos_hint: {'center_x':.8,'top':.65}
        #Image
        
        AsyncImage:
            source: str(root.img_url)
            pos_hint: {'top':1.179,'center_x':.30}
        Image:
            source: 'images/celsius.png'
            pos_hint: {'center_x':.7,'top':1.05 }
        
