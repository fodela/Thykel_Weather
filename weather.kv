ScreenManager:
    id: sm
    Index:
        id: index
        name: 'index'
    Weather:
        id: weather
        name: 'weather'
<Index>:
         
            
    FloatLayout:
        canvas.before:     
            Rectangle:
                pos: 0,-120
                size: self.size
                source:'images/index_pic.jpg'  
        MDToolbar:
            pos_hint: {'top':1}
            title: 'Welcome to Thykel weather App'
            title_anchor: 'center'
            # specific_text_color: 7/255,2/255,41/255,1
            md_bg_color:  7/255,2/255,41/255,1
        #Search
        MDTextField:
            id: searched_city
            hint_text: 'Search City'
            pos_hint: {'top':.89}
            required: True
            helper_text: "Press enter to get the weather of the city"
            helper_text_mode: 'on_focus'
            multiline: False
            on_text_validate: app.search('on_release',40)

<Weather>
    canvas.before:     
        Rectangle:
            pos: 0,-130
            size: self.size
            source:'images/bgpic.jpg'       
            
    FloatLayout:
        MDToolbar:
            pos_hint: {'top':1}
            title: 'Weather'
            md_bg_color:  7/255,2/255,41/255,1
        #Search
        MDTextField:
            id: searched_city
            hint_text: 'Search City'
            pos_hint: {'top':.87}
            required: True
            helper_text: "Press enter to get the weather of the city"
            helper_text_mode: 'on_focus'
            multiline: False
            on_text_validate: app.search('on_release',40)
            
        #Labels
        Label:
            text:'Today'
            font_size: 30
            pos_hint: {'top':1.2,'center_x':.5}
        Label:
            text:str(app.Today)
            pos_hint: {'center_x':.5,'top': 1.155}
        Label:
            text:str(app.weather_text)
            pos_hint: {'top':1.1,'center_x':.40}
        Label:
            text:str(app.temp_c)
            font_size:100
            pos_hint: {'center_x':.5,'top':1}
        Label:
            text:str(app.city_name)+', '+str(app.country_name)
            pos_hint: {'center_x':.5,'top':.90}
        Label:
            text:'Feels like '+str(app.feels_like)+ '  .  '+'UV '+ str(app.uv)
            pos_hint: {'center_x':.5,'top':.80}
            #Wind
        Label:
            text:'Wind:'
            pos_hint: {'center_x':.2,'top':.70}
        Label:
            text:str(app.wind)+ ' mph'
            pos_hint: {'center_x':.2,'top':.65}
            #Humidity
        Label:
            text:'Humidity:'
            pos_hint: {'center_x':.5,'top':.70}
        Label:
            text:str(app.humidity)+'%'
            pos_hint: {'center_x':.5,'top':.65}
            #Pressure
        Label:
            text:'Pressure:'
            pos_hint: {'center_x':.8,'top':.70}
        Label:
            text:str(app.pressure)+' in'
            pos_hint: {'center_x':.8,'top':.65}
        #Image
        
        AsyncImage:
            source: str(app.img_url)
            pos_hint: {'top':1.179,'center_x':.30}
        Image:
            source: 'images/celsius.png'
            pos_hint: {'center_x':.7,'top':1.05 }
         